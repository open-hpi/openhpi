#!/bin/sh -x
#
./nukem.sh
./bootstrap
./configure --enable-debug --disable-snmp_bc --disable-snmp_rsa --disable-ipmidirect --disable-watchdog --disable-ipmi --disable-snmp_client --disable-remote_client --disable-sysfs --disable-simulator --disable-daemon --disable-examples --sysconfdir=/etc $@

#Quick hack to speed up build on SMP machines
uname -anr | grep SMP > /dev/null

if [ $? -eq 0 ]
then
	echo "We have us an SMP system!"
	make -j 2 all
else
	make all
fi
